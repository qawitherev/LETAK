<!--    manage vehicle activity -->
    <style name="Theme.LETAK.ManageVehicleActivity">
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

</resources>
