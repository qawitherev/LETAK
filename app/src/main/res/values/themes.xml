<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LETAK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/design_default_color_primary</item>
        <!-- Customize your theme here. -->
    </style>

<!--    welcome activity theme  -->
    <style name="Theme.LETAK.WelcomeActivity">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

<!--    signup activity theme    -->
    <style name="Theme.LETAK.SignUpActivity">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

<!--    login activity theme    -->
    <style name="Theme.LETAK.LoginActivity">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

<!--    main menu activity  -->
    <style name="Theme.LETAK.MainMenuActivity">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
    </style>
</resources>
